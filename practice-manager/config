## Script will only run on top level directory tree to recursively search tree.
## This should NOT be set in lower level directories.
ROOT_LEVEL_DIRECTORY=true

## This flag distinguishes repository cache data, make sure is correctly set.
REPOSITORY_IDENTIFIER=c

## main extension used in this repository, eg: c, cxx, py, jar, tex, etc.
PRIMARY_EXTENSION=c

## Compiler or Interpreter used to parse practices.
## Leave empty if practices are not meant to be parsed or compiled.
COMPILER="ccache gcc"

## Arguments will be set in front of compiler name as options.
COMPILER_OPTIONS="-Wall -Os -g"

## If set, practices will be compiled or interpreted by COMPILER .
COMPILABLE=true

## If set, practice will be executed.
## Set only if compiler generates an executable file.
EXECUTABLE=true

## If set and EXECUTABLE is set, executable file will run in background.
## NOTE: post script cannot be set in the same time
RUN_IN_BACKGROUND=false

## If set, executable's output will be piped into <practice>.post script to filter generated results
## Useful for executables having sensitive outputs like password, names or numbers.
POST_SCRIPT=false

## Compiler dependent output option
OUTPUT_OPTION="-o"

## Executable file name generated by COMPILER .
OUTPUT_FILE="practice"

## Additional extensions alongside source code. e.g. .pdf .mp4 .jpg
ADDITIONAL_EXTENSIONS=".md .config .refs .comment .args .input .output .md5sum .title .post"

# If set, output file will be generated.
# If not set, output section will not appear in practice pages.
OUTPUTS=true

## If set, comments will be considered in practice pages.
## If not set, comment section will not appear in practice pages.
COMMENTS=true

## If set, references will be considered in practice pages.
## If not set, mouse hover will not work on comment section.
REFERENCES=true

## If set, directory will be treated as project page, not a practice page.
## Below directories will be ignored as project directories.
## Use with caution.
PROJECT_DIRECTORY=false
